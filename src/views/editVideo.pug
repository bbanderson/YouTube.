extends ./templates/layout

block content
  .form-container.delete
    form(action=routes.editVideo(video.id), method="post")
      input(type="text", placeholder="Title", name="title", value=video.title)
      textarea(name="description", placholder="Description")=video.description
      input(type="submit", value="Update Video")
      a.form-container__link.form-container__link--delete(href=routes.deleteVideo(video.id))
        button.deleteVideo Delete Video