extends ./templates/layout

block content
  .form-container
    .record-container#jsRecordContainer
      video#jsVideoPreview
      button#jsRecordBtn Start Recording
    form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
      label(for="file") Video File
      input(type="file", id="file", name="videoFile" required, accept="video/*")
      input(type="text", placeholder="Title", name="title", autocomplete="off" required)
      textarea(name="description", placeholder="Description", autocomplete="off" required)
      input(type="submit", value="Upload Video")