mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls#js-controller
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                <input class="progress" type="range" value="0" max="100"></input>
                <span class="time">
                    <span id="currentTime">00:00</span>
                    <span>&nbsp;/&nbsp;</span>
                    <span id="totalTime">00:00</span>
                </span>
                //- span.time
                //-     span#currentTime 
                //-     span /
                //-     span#totalTime 
            .videoPlayer__column
                span#jsVolumeButton
                    span.vol
                        i.fas.fa-volume-up
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", value="0.5", step="0.1")
                span#jsFullScreen
                    i.fas.fa-expand
